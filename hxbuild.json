{
	"defaultTarget": "Hl",
	"defaultConfig": "Debug",
	
	"default": {
		"name": "Project",
		"main": "Main",
		"include": [ "assets" ]
	},

	"configs": {

		"Release": {
			"defines": [ "Release" ]
		},

		"Debug": {
			"defines": [ "Debug" ]
		}
		
	},

	"targets": {

		"Cpp": {
			"target": "cpp",
			"outDir": "build/cpp"
		},

		"Hl": {
			"target": "hl",
			"defines": [ "HashLink" ],
			"outFile": "Project.hl",
			"outDir": "build/hl"
		},

		"Js": {
			"target": "js",
			"defines": [ "Js" ],
			"outFile": "Project.js",
			"outDir": "build/js"
		},

		"Swf": {
			"target": "swf",
			"defines": [ "Swf" ],
			"outFile": "Project.swf",
			"outDir": "build/swf"
		}

	}
}